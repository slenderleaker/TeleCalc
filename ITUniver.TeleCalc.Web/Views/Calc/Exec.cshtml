@model ITUniver.TeleCalc.Web.Models.CalcModel

@{
    ViewBag.Title = "Exec";
}







@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Вспомогатор</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OperName, "", new { htmlAttributes = new { @class = "control-label col-md-2" } })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OperName, Model.OperationList, new
           {
               htmlAttributes = new
               {
                   @class = "form-control"

               }
           } ) 
                @Html.ValidationMessageFor(model => model.OperName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InputData, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InputData, "Collection", new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @oninput = "calculate()"
               }
           })
                @Html.ValidationMessageFor(model => model.InputData, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Result, htmlAttributes: new {
           @class = "control-label col-md-2",
           @oninput = "calculate()"
       })
            <div class="col-md-10" id="Result">
            </div>
        </div>
    </div>
}

<script>

    function calculate() {
             
        var xElement = $("input[name=InputData]").last();

        if (xElement.val().endsWith(" ")) {
            var newInput = $("<input class=\"form-control text-box single-line\" id=\"InputData\" name=\"InputData\" oninput=\"calculate();\" type=\"text\" value=\"\">");
            newInput.insertAfter(xElement);
            newInput.focus();
        }
        $.ajax({
            method: "POST",
            url: "/Calc/Exec",
            data: $('form').serializeArray()
        }).success(
            function (result) {
                $("#Result").html(result);
                setTimeout(calculate, 1000, result);
            }

        )
    }

</script>
